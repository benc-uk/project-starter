{
  "env": {
    "es2021": true,
    "node": true
    // "browser": true,
    // "es6": true,
    // "jest": true
  },
  "extends": "eslint:recommended", // Do not use airbnb/standard/google
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "camelcase": "error",
    "curly": "error",
    "no-unused-vars": "error",
    "no-var": "error",
    "no-this-before-super": "error",
    "no-invalid-this": "error",
    "prefer-template": "error"
  }
}
